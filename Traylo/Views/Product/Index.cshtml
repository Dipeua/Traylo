@model IEnumerable<Product>

@{
    ViewData["Title"] = "Gestion des produits";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Liste des produits</h2>
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus me-1"></i> Ajouter un produit
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <strong class="fs-6">Produits</strong>
            <span class="badge bg-light text-dark">@(Model?.Count() ?? 0) produit(s)</span>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nom du produit</th>
                            <th>Quantité initiale</th>
                            <th>Quantité livrée</th>
                            <th>Quantité restante</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-box me-2 text-primary"></i>@product.Name
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@product.InitQuantity</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">@((product.QuantityDelivery ?? 0))</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning text-dark">@((product.QuantityReste ?? 0))</span>
                                </td>
                                <td class="text-center">
                                    @* <a asp-controller="Product" asp-action="Edit" asp-route-ProductId="@product.ProductId" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a> *@
                                    <a asp-controller="Product" asp-action="Delete" asp-route-ProductId="@product.ProductId" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center p-4 text-muted">
                    Aucun produit pour le moment.
                </div>
            }
        </div>
    </div>
</div>
