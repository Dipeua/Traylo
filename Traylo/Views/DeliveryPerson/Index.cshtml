@model IEnumerable<DeliveryPerson>

@{
    ViewData["Title"] = "Gestion des livreurs";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Liste des livreurs</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="DeliveryPerson" asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus me-1"></i> Ajouter un livreur
            </a>
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <strong class="fs-6">Livreurs</strong>
            <span class="badge bg-light text-dark">@(Model?.Count() ?? 0) livreur(s)</span>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nom du livreur</th>
                            <th>Numero de téléphone</th>
                            <th>Ville</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th class="text-center">Actions</th>                                
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var delivery in Model)
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-user me-2 text-primary"></i>@delivery.FullName
                                </td>
                                <td>
                                    <i class="fas fa-phone me-2 text-success"></i>@delivery.PhoneNumber
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">@delivery.City?.Name</span>
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td class="text-center">
                                        <a asp-controller="DeliveryPerson" asp-action="Edit" asp-route-DeliveryPersonsId="@delivery.DeliveryPersonId" class="btn btn-warning btn-sm me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="DeliveryPerson" asp-action="Delete" asp-route-DeliveryPersonsId="@delivery.DeliveryPersonId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center p-4 text-muted">
                    Aucun livreur pour le moment.
                </div>
            }
        </div>
    </div>
</div>
