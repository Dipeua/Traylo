<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Traylo - @ViewData["Title"]</title>

    <!-- Custom fonts for this template-->
    <link href="~/traylo/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

    <!-- Custom styles for this template-->
    <link href="~/traylo/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-cubes"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Traylo <sup>v1.0.0</sup></div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Tableau de bord -->
            <li class="nav-item active">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Tableau de bord</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="StockHistory" asp-action="Index">
                    <i class="fas fa-fw fa-history"></i>
                    <span>Mouvements des stocks</span>
                </a>
            </li>

            <hr class="sidebar-divider">
            <div class="sidebar-heading">Gestion</div>

            <li class="nav-item">
                <a class="nav-link" asp-controller="City" asp-action="Index">
                    <i class="fas fa-fw fa-city"></i>
                    <span>Villes</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Index">
                    <i class="fas fa-fw fa-user-tie"></i>
                    <span>Gérants</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="DeliveryPerson" asp-action="Index">
                    <i class="fas fa-fw fa-truck"></i>
                    <span>Livreurs</span>
                </a>
            </li>

            <hr class="sidebar-divider">
            <div class="sidebar-heading">Stocks</div>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Index">
                    <i class="fas fa-fw fa-box"></i>
                    <span>Produits</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Rapports" asp-action="Index">
                    <i class="fas fa-fw fa-file-alt"></i>
                    <span>Rapports</span>
                </a>
            </li>


            <hr class="sidebar-divider d-none d-md-block">

            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Salut, <strong>@User.Identity?.Name</strong> </span>
                                <img class="img-profile rounded-circle" src="~/traylo/img/undraw_profile.svg">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in">
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>Déconnexion
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>

                <!-- Contenu -->
                @RenderBody()
                <!-- /.container-fluid -->

            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Traylo 2025</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Prêt à partir ?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Sélectionnez «Déconnexion» ci-dessous si vous êtes prêt à mettre fin à votre session en cours.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-primary">Déconnexion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Scripts -->
    <script src="~/traylo/vendor/jquery/jquery.min.js"></script>
    <script src="~/traylo/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/traylo/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/traylo/js/sb-admin-2.min.js"></script>
    <script src="~/traylo/vendor/chart.js/Chart.min.js"></script>
    <script src="~/traylo/js/demo/chart-area-demo.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
