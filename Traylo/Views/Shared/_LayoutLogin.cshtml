<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Traylo - @ViewData["Title"]</title>

    <!-- Fonts & icons -->
    <link href="~/traylo/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">

    <!-- Bootstrap & SB Admin 2 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/traylo/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        body.login-bg {
            background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
            height: 100vh;
        }

        .card-login {
            margin-top: 10%;
            border: 0;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        }
    </style>
</head>

<body class="login-bg">

    <div class="container d-flex justify-content-center align-items-center">
        <div class="card card-login p-4 col-md-5 col-lg-4">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/traylo/vendor/jquery/jquery.min.js"></script>
    <script src="~/traylo/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/traylo/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/traylo/js/sb-admin-2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
