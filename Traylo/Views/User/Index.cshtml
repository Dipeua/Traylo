@model IEnumerable<User>

@{
    ViewData["Title"] = "Gestion des gérants";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Liste des gérants</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="User" asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus me-1"></i> Ajouter un gérant
            </a>
            
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <strong class="fs-6">Gérants</strong>
            <span class="badge bg-light text-dark">@(Model?.Count() ?? 0) gérant(s)</span>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nom d'utilisateur</th>
                            <th>Rôle</th>
                            <th>Ville</th>
                            @if (User.IsInRole("Admin"))
                            {

                                <th class="text-center">Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-user me-2 text-primary"></i>@user.Username
                                </td>
                                <td>
                                    <span class="badge bg-success text-white">@user.Role</span>
                                </td>
                                <td>
                                    <i class="fas fa-city me-2 text-info"></i>@user.City?.Name
                                </td>
                                @if (User.IsInRole("Admin"))
                                {

                                    <td class="text-center">
                                        <a asp-controller="User" asp-action="Edit" asp-route-UserId="@user.UserId" class="btn btn-warning btn-sm me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="User" asp-action="Delete" asp-route-UserId="@user.UserId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center p-4 text-muted">
                    Aucun gérant pour le moment.
                </div>
            }
        </div>
    </div>
</div>
